code = "shader_type canvas_item;

uniform sampler2D my_tex : hint_albedo; // твоя текстура
uniform float frequency = 8.0;
uniform float amplitude = 0.05;

void fragment() {
    // В Godot UV уже нормализованные (0..1), поэтому делить не надо
    vec2 texCoord = UV;
    
    // TIME = время в секундах
    vec2 pulse = sin(vec2(TIME) - frequency * texCoord);

    // расстояние от центра по вертикали (0..1)
    float dist = 2.0 * abs(texCoord.y - 0.5);

    // искажение только по оси Y
    vec2 newCoord = texCoord + amplitude * vec2(0.0, pulse.x);
    
    // плавный переход между искажением и исходными UV
    vec2 interpCoord = mix(newCoord, texCoord, dist);

    COLOR = texture(my_tex, interpCoord);
}
"

